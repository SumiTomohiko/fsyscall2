
name="test_getpeername_path"
dir="$PWD/${tmp_dir}"
sockfile="${dir}/${name}.sock"
pidfile="${dir}/${name}.pid"
cmd="getpeername_path/getpeername_path"
args="${sockfile}"
expected_stdout="${sockfile}"

precmd()
{
	local opts

	opts="--socket-file=${sockfile} --pid-file=${pidfile}"
	"${tests_dir}/socktestd/socktestd" ${opts}
}

postcmd()
{
	kill -TERM $(cat "${pidfile}")
	rm -f "${sockfile}" "${pidfile}"
}

